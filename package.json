{
	"name": "@untemps/utils",
	"version": "1.7.1",
	"description": "",
	"repository": "git@github.com:untemps/utils.git",
	"keywords": [],
	"author": "Vincent Le Badezet <v.lebadezet@untemps.net>",
	"license": "MIT",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"exports": {
		"./*": {
			"import": "./dist/esm/*.mjs",
			"require": "./dist/cjs/*.cjs"
		}
	},
	"engines": {
		"node": ">=14.17"
	},
	"devDependencies": {
		"@babel/cli": "^7.17.6",
		"@babel/core": "^7.17.5",
		"@babel/plugin-transform-runtime": "^7.17.0",
		"@babel/preset-env": "^7.16.11",
		"@betit/rollup-plugin-rename-extensions": "^0.1.0",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@rollup/plugin-strip": "^2.1.0",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^8.0.2",
		"@testing-library/dom": "^8.11.3",
		"@testing-library/jest-dom": "^5.16.2",
		"babel-jest": "^27.5.1",
		"cross-env": "^7.0.2",
		"fast-check": "^2.22.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.68.0",
		"rollup-plugin-filesize": "^9.1.2",
		"rollup-plugin-multi-input": "^1.3.1",
		"rollup-plugin-progress": "^1.1.2",
		"rollup-plugin-terser": "^7.0.2",
		"semantic-release": "^19.0.2"
	},
	"dependencies": {
		"@babel/runtime": "^7.17.8"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn test:ci && yarn prettier"
		}
	},
	"jest": {
		"setupFilesAfterEnv": [
			"<rootDir>/jest-setup.js"
		],
		"testEnvironment": "jsdom",
		"coverageDirectory": "./coverage/",
		"collectCoverage": true
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "chore",
							"scope": "force",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github"
		]
	},
	"scripts": {
		"test": "jest -u --watchAll",
		"test:ci": "jest -u -b --ci --coverage",
		"build": "rimraf dist && yarn build:cjs && yarn build:esm",
		"build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs rollup -c",
		"build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm rollup -c",
		"prettier": "prettier \"*/**/*.js\" --ignore-path ./.prettierignore --write && git add . && git status"
	}
}
